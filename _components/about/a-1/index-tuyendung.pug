section.dh-about-1
	.container
		.row
			.col-12.main
				h2.h-title.line.text-upper CHÍNH SÁCH ĐÀO TẠO
				figure.box-item
					.box-img.btn-ripple
						img(src='./img/career/career_1.jpg', alt='')
